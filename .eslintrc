{
  "root": true,

  "extends": [
    "airbnb",
    "plugin:flowtype/recommended",
    "plugin:react/recommended",
  ],

  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },

  "parser": "babel-eslint",

  "plugins": [
    "react",
    "import",
    "flowtype"
  ],

  "env": {
    "browser": true,
    "node": true
  },

  "rules": {
    "react/jsx-closing-bracket-location": [2, {
      "nonEmpty": "after-props",
      "selfClosing": "after-props",
    }],
    "no-bitwise": [0],
  },

  "settings": {

  }
}
